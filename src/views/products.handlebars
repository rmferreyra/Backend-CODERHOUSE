{{#if isAdmin}}
  <div class="cart-button">
    <a href="" class="btn" id="viewCartButton">Ver Carrito</a>
  </div>  
  <div class="container">
    {{#each products}}
      <div class="card">
        <figure>
          <img src="{{this.thumbnails}}" alt="{{this.title}}">
        </figure>
        <section class="details">
          <div class="min-details">
            <h1>{{this.title}}</h1>
            <h1 class="price">{{this.price}}</h1>
          </div>
          <a href="/products/{{this.id}}" class="btn">Ver detalles</a>
          <a href="#" class="btn add-to-cart" data-product-id="{{this._id}}">Agregar al carrito</a>
        </section>
      </div>
    {{/each}}
  </div>
  <div class="pagination">
    <span class="page-info">PÃ¡gina {{page}} de {{totalPages}}</span>
  </div>
{{else}}
  <p>No tenes permisos para ver la lista de productos</p>
{{/if}}