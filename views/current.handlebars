<div
  class="column is-half is-offset-one-quarter is-narrow is-flex is-flex-direction-column is-justify-content-center is-align-items-center"
>
  <h1 class="title is-3">Usuario Actual</h1>
  <ul>
    {{#each users}}
      <li>Nombre: {{this.firstname}}</li>
      <li>Apellido: {{this.lastname}}</li>
      <li>Email: {{this.email}}</li>
      <li>Edad: {{this.age}}</li>
      <li>Role: {{this.role}}</li>
      <li>Carrito: {{this.cart}}</li>
      <li>Creado: {{this.createDate}}</li>
    {{/each}}
  </ul>
</div>